                  <TableColumn fx:id="tcI20" prefWidth="35" sortable="false" styleClass="attackCol" text="20" />
                  <TableColumn fx:id="tcI19" prefWidth="35" sortable="false" styleClass="attackCol" text="19" />
                  <TableColumn fx:id="tcI18" prefWidth="35" sortable="false" styleClass="attackCol" text="18" />
                  <TableColumn fx:id="tcI17" prefWidth="35" sortable="false" styleClass="attackCol" text="17" />
                  <TableColumn fx:id="tcI16" prefWidth="35" sortable="false" styleClass="attackCol" text="16" />
                  <TableColumn fx:id="tcI15" prefWidth="35" sortable="false" styleClass="attackCol" text="15" />
