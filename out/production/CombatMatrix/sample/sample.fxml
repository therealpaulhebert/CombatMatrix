                  <TableColumn fx:id="tcI26" prefWidth="35" sortable="false" styleClass="attackCol" text="26" />
                  <TableColumn fx:id="tcI25" prefWidth="35" sortable="false" styleClass="attackCol" text="25" />
                  <TableColumn fx:id="tcI24" prefWidth="35" sortable="false" styleClass="attackCol" text="24" />
                  <TableColumn fx:id="tcI23" prefWidth="35" sortable="false" styleClass="attackCol" text="23" />
                  <TableColumn fx:id="tcI22" prefWidth="35" sortable="false" styleClass="attackCol" text="22" />
