<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <HBox fx:id="addCharacterForm">
         <children>
            <Button mnemonicParsing="false" onAction="#addCharacter" text="Add Character" />
            <TextField fx:id="nameField" promptText="Name">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="rollField" prefWidth="45.0" promptText="Roll">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="attackField" prefWidth="70.0" promptText="Attacks">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </TextField>
            <Button mnemonicParsing="false" onAction="#prevTurn" text="&lt; Prev Turn">
               <HBox.margin>
                  <Insets left="125.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#nextTurn" text="Next Turn &gt;">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <ScrollPane fitToHeight="true" fitToWidth="true" hmin="30.0" minHeight="300.0">
         <content>
            
            <TableView id="tblCharacters" fx:id="tblCharacters" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
              <columns>
                  <TableColumn id="tcName" fx:id="tcName" prefWidth="75" text="Character" />
                  <TableColumn fx:id="tcRoll" prefWidth="45.0" text="Roll" />
                  <TableColumn fx:id="tcAttacks" prefWidth="65.0" text="Attacks" />
                  <TableColumn fx:id="tcI30" prefWidth="35" sortable="false" styleClass="attackCol" text="30" />
                  <TableColumn fx:id="tcI29" prefWidth="35" sortable="false" styleClass="attackCol" text="29" />
                  <TableColumn fx:id="tcI28" prefWidth="35" sortable="false" styleClass="attackCol" text="28" />
