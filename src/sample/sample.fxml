<VBox xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <HBox fx:id="addCharacterForm">
         <children>
            <Button mnemonicParsing="false" onAction="#addCharacter" text="Add Character" />
